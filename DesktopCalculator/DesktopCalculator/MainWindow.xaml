<Window x:Class="DesktopCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="332.38" Width="360.011">
    <Grid Margin="0,0,2,3">
        <Button x:Name="executeBtn" Content="=" HorizontalAlignment="Left" Margin="108,99,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.919,1.232" Click="executeBtn_Click"/>
        <TextBox x:Name="resultBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" IsEnabled="False"/>
        <Button x:Name="num1btn" Content="1" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num2btn" Content="2" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num3btn" Content="3" HorizontalAlignment="Left" Margin="70,45,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num4btn" Content="4" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num5btn" Content="5" HorizontalAlignment="Left" Margin="40,72,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num6btn" Content="6" HorizontalAlignment="Left" Margin="70,72,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num7btn" Content="7" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num8btn" Content="8" HorizontalAlignment="Left" Margin="40,99,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="num9btn" Content="9" HorizontalAlignment="Left" Margin="70,99,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>
        <Button x:Name="plusbtn" Content="+" HorizontalAlignment="Left" Margin="108,45,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.919,1.232" Click="action_Click"/>
        <Button x:Name="minusBtn" Content="-" HorizontalAlignment="Left" Margin="108,72,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.919,1.232" Click="action_Click"/>
        <Button x:Name="multiplyBtn" Content="*" HorizontalAlignment="Left" Margin="146,45,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.919,1.232" Click="action_Click" />
        <Button x:Name="divideBtn" Content="/" HorizontalAlignment="Left" Margin="146,72,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.919,1.232" Click="action_Click"/>
        <Button x:Name="num1btn_Copy" Content="0" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Width="25" Click="num1btn_Click"/>

    </Grid>
</Window>
